<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayk.kalculations.Back"
    android:background="#FFFFFF"
    android:gravity="center"
    android:id="@+id/screen">

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:text="SUM :"
        android:textColor="#CA171B"
        android:textSize="40sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sum"
        android:padding="6dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayout">

        <ImageButton
            style="@style/imagebutton_style"
            android:layout_height="wrap_content"

            android:id="@+id/shareafter"
            android:src="@drawable/ic_share_white_24dp"

            android:padding="2dp"
            android:layout_margin="8dp"
            />
        <ImageButton
            style="@style/imagebutton_style"
            android:layout_height="wrap_content"

            android:id="@+id/replay"
            android:src="@drawable/ic_replay_white_24dp"

            android:padding="2dp"
            android:layout_margin="8dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Score:"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="#CA171B"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <TextView
        android:id="@+id/highscore_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#CA171B"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/highscore"
        android:layout_alignBottom="@+id/highscore"
        android:layout_toRightOf="@+id/highscore"
        android:layout_toEndOf="@+id/highscore"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/sum_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#CA171B"
        android:textSize="40sp"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/sum"
        android:layout_toEndOf="@+id/sum" />


</RelativeLayout>
